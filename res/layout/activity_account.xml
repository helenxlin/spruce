<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:background="#f0f7f4"
    android:orientation="vertical" >
    	
    <WebView
    	android:id="@+id/wvAnimationAccount"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
	/>
    
    <RelativeLayout
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="0dp"
    	android:paddingRight="0dp"
    	android:layout_marginBottom="15sp"
    	android:layout_gravity="left"
    	android:gravity="left"
    	android:background="#f0f7f4"
       	android:orientation="horizontal" >
    	
   <TextView
     	android:id="@+id/tvFill"
       	android:text=""
       	android:background="#000000"
    	android:layout_width="200sp"
    	android:layout_height="40sp"
       	android:textSize="10sp"
       	android:fontFamily="sans-serif-medium"
       	android:textStyle="normal"         	
       	android:layout_gravity="left"/>
    	
   <LinearLayout
       	android:layout_width="wrap_content"
    	android:layout_height="40sp"
    	android:layout_marginTop="0sp"
    	android:paddingLeft="10dp"
    	android:paddingRight="5dp"
    	android:layout_gravity="center"
    	android:gravity="left"
    	android:background="#000000"
    	android:orientation="horizontal" >
    
   <TextView
     	android:id="@+id/tvAccount"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="@string/Account" />
   
   <TextView
     	android:id="@+id/tvEmpty1"
       	android:text=""
       	android:background="#000000"
    	android:layout_width="40sp"
    	android:layout_height="40sp"
       	android:textSize="10sp"
       	android:fontFamily="sans-serif-medium"
       	android:textStyle="normal"         	
       	android:layout_gravity="center"/>	
    
    <TextView
     	android:id="@+id/tvTree"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/Tree" />
    
    <TextView
     	android:id="@+id/tvEmpty2"
       	android:text=""
       	android:background="#000000"
    	android:layout_width="40sp"
    	android:layout_height="40sp"
       	android:textSize="170sp"
       	android:fontFamily="sans-serif-medium"
       	android:textStyle="normal"         	
       	android:layout_gravity="center"/>		
   
   <TextView
     	android:id="@+id/tvGoals"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/Goals" />
   
   </LinearLayout>
   
   </RelativeLayout>
        
</LinearLayout>

